@page
@model ejercicioRAZOR.Pages.IMCModel
@{
    ViewData["Title"] = "Calculadora IMC";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card ">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Calculadora de IMC</h2>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Peso" class="form-label">Peso (kg)</label>
                    <input asp-for="Peso" type="number" step="0.1" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Altura" class="form-label">Altura (m)</label>
                    <input asp-for="Altura" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg">Calcular IMC</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.ResultadoIMC > 0)
    {
        <div class="card mt-4 shadow">
            <div class="card-body text-center">
                <h3 class="text-success">Tu IMC es: @Model.ResultadoIMC.ToString("0.00")</h3>
                <p class="lead">Clasificación: <strong>@Model.Clasificacion</strong></p>
                <img src="@Model.ImagenRecomendacion" alt="Recomendaciones" class="img-fluid rounded" style="max-width:300px;" />
            </div>
        </div>
    }
</div>
