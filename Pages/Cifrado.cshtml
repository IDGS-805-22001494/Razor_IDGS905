@page
@model ejercicioRAZOR.Pages.CifradoModel
@{
    ViewData["Title"] = "Cifrado César";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card ">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">Cifrado César (Julio César)</h2>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-12">
                    <label asp-for="Mensaje" class="form-label">Mensaje</label>
                    <textarea asp-for="Mensaje" class="form-control" rows="4" required></textarea>
                </div>
                <div class="col-md-6">
                    <label asp-for="Desplazamiento" class="form-label">Desplazamiento (n)</label>
                    <input asp-for="Desplazamiento" type="number" class="form-control" min="1" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Accion" class="form-label">Acción</label>
                    <select asp-for="Accion" class="form-select">
                        <option value="codificar">Codificar</option>
                        <option value="decodificar">Decodificar</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Procesar</button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Resultado))
    {
        <div class="card mt-4 shadow">
            <div class="card-body">
                <h4 class="text-success">Resultado:</h4>
                <p class="border rounded p-3 bg-light">@Model.Resultado</p>
            </div>
        </div>
    }
</div>
